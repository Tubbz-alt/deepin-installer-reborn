# Update apt source list.

if is_x86; then
  TYPE=$(cat /etc/deepin-version 2>/dev/null | grep Type= | head -n 1 | \
    sed 's/Type=//')

  case "$TYPE" in
    Professional)
    cat > /etc/apt/sources.list <<EOF
## Generated by deepin-installer
deb http://packages.deepin.com/enterprise camel main contrib non-free
#deb-src http://packages.deepin.com/enterprise camel main contrib non-free
EOF
    ;;
    *)
    cat > /etc/apt/sources.list <<EOF
## Generated by deepin-installer
deb [by-hash=force] http://packages.deepin.com/deepin lion main contrib non-free
#deb-src http://packages.deepin.com/deepin lion main contrib non-free
EOF
    ;;
  esac

elif is_loongson; then
  if [ x$(dpkg --print-architecture) = x'mipsel' ]; then
    # Loongson 32-bit
    cat > /etc/apt/sources.list <<EOF
## Generated by deepin-installer
deb [trusted=yes] http://packages.deepin.com/loongson raccoon main contrib non-free
#deb-src [trusted=yes] http://packages.deepin.com/loongson raccoon main contrib non-free
EOF

  else
    # Loongson 64-bit
    cat > /etc/apt/sources.list <<EOF
## Generated by deepin-installer
deb [trusted=yes] http://packages.deepin.com/loongson64 camel main contrib non-free
EOF
  fi

elif is_sw; then
  cat > /etc/apt/sources.list <<EOF
## Generated by deepin-installer
deb [trusted=yes] http://packages.deepin.com/sw421 camel   main contrib non-free
EOF

elif is_arm64; then
  cat > /etc/apt/sources.list <<EOF
## Generated by deepin-installer
deb [trusted=yes] http://packages.deepin.com/aarch64 camel main contrib non-free
EOF
fi

return 0
